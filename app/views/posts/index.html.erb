<%= form_with url: posts_search_path, method: :get, local: true do |s| %>
  <%= s.text_field :title,placeholder: "タイトル..." %>
  <%= s.text_field :names,placeholder: "名前..." %>
  <%= s.text_field :price,placeholder: "値段..." %>
  <%= s.submit :search, class: "btn" %>
<% end %>
<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <% if post.checkbox == "1" %>
          <td>◯</td>
        <% else %>
          <td></td>
        <% end %>
        <td><%= post.title %></td>
        <td><%= post.name %></td>
        <td><%= post.price %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to '投稿ページへ', posts_path %>
<%= link_to 'New Post', new_post_path %>
